{
  "server": "@modelcontextprotocol/server-everything",
  "source": "https://github.com/modelcontextprotocol/typescript-sdk",
  "tools": [
    {
      "name": "echo",
      "description": "Echoes back the input",
      "inputSchema": {
        "type": "object",
        "properties": {
          "message": { "type": "string", "description": "Message to echo" }
        },
        "required": ["message"]
      }
    },
    {
      "name": "get-sum",
      "description": "Adds two numbers together",
      "inputSchema": {
        "type": "object",
        "properties": {
          "a": { "type": "number" },
          "b": { "type": "number" }
        },
        "required": ["a", "b"]
      }
    },
    {
      "name": "get-tiny-image",
      "description": "Returns a small test image",
      "inputSchema": {
        "type": "object",
        "properties": {}
      }
    },
    {
      "name": "get-annotated-message",
      "description": "Returns an annotated message",
      "inputSchema": {
        "type": "object",
        "properties": {
          "messageStyle": {
            "type": "string",
            "enum": ["cheerful", "professional", "casual"],
            "description": "Style of the message"
          },
          "includeMetadata": { "type": "boolean", "default": true }
        }
      }
    },
    {
      "name": "get-env",
      "description": "Returns configured environment variables",
      "inputSchema": {
        "type": "object",
        "properties": {}
      }
    },
    {
      "name": "get-resource-links",
      "description": "Returns resource links for testing",
      "inputSchema": {
        "type": "object",
        "properties": {}
      }
    },
    {
      "name": "get-resource-reference",
      "description": "Returns a resource reference",
      "inputSchema": {
        "type": "object",
        "properties": {
          "resourceIndex": {
            "type": "number",
            "description": "Index of the resource to reference (0-100)"
          }
        },
        "required": ["resourceIndex"]
      }
    },
    {
      "name": "get-structured-content",
      "description": "Returns structured content with text and images",
      "inputSchema": {
        "type": "object",
        "properties": {}
      }
    },
    {
      "name": "get-roots-list",
      "description": "Returns the list of roots from the client",
      "inputSchema": {
        "type": "object",
        "properties": {}
      }
    },
    {
      "name": "gzip-file-as-resource",
      "description": "Returns a gzipped file as a resource link",
      "inputSchema": {
        "type": "object",
        "properties": {}
      }
    },
    {
      "name": "toggle-simulated-logging",
      "description": "Toggles simulated logging on/off",
      "inputSchema": {
        "type": "object",
        "properties": {
          "enabled": { "type": "boolean", "description": "Whether to enable simulated logging" }
        },
        "required": ["enabled"]
      }
    },
    {
      "name": "toggle-subscriber-updates",
      "description": "Toggles subscriber update notifications on/off",
      "inputSchema": {
        "type": "object",
        "properties": {
          "enabled": { "type": "boolean", "description": "Whether to enable subscriber updates" }
        },
        "required": ["enabled"]
      }
    },
    {
      "name": "trigger-elicitation-request",
      "description": "Triggers an elicitation request to gather user input",
      "inputSchema": {
        "type": "object",
        "properties": {}
      }
    },
    {
      "name": "trigger-elicitation-request-async",
      "description": "Triggers an async elicitation request to gather user input",
      "inputSchema": {
        "type": "object",
        "properties": {}
      }
    },
    {
      "name": "trigger-sampling-request",
      "description": "Triggers a sampling request to the client",
      "inputSchema": {
        "type": "object",
        "properties": {}
      }
    },
    {
      "name": "trigger-sampling-request-async",
      "description": "Triggers an async sampling request to the client",
      "inputSchema": {
        "type": "object",
        "properties": {}
      }
    },
    {
      "name": "trigger-long-running-operation",
      "description": "Starts a long-running operation that reports progress",
      "inputSchema": {
        "type": "object",
        "properties": {
          "duration": {
            "type": "number",
            "default": 10,
            "description": "Duration of the operation in seconds"
          },
          "steps": { "type": "number", "default": 5, "description": "Number of progress steps" }
        }
      }
    },
    {
      "name": "simulate-research-query",
      "description": "Simulates a multi-step research query with progress updates",
      "inputSchema": {
        "type": "object",
        "properties": {
          "query": { "type": "string", "description": "The research query to simulate" },
          "sources": {
            "type": "number",
            "default": 3,
            "description": "Number of sources to simulate"
          }
        },
        "required": ["query"]
      }
    }
  ]
}
